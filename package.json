{
  "name": "wavesurfer",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/wavesurfer.umd.cjs",
  "exports": {
    ".": {
      "import": "./dist/wavesurfer.js",
      "require": "./dist/wavesurfer.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && vite build --c vite.config.minimap.js && vite build --c vite.config.multitrack.js && vite build --c vite.config.regions.js && vite build --c vite.config.timeline.js",
    "preview": "vite preview",
    "lint": "eslint --ext .ts src --fix",
    "prettier": "prettier -w src/**/*.ts public/examples/*.js public/tutorial/**/*.{js,css} --ignore-path .gitignore"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.7",
    "typescript": "^4.9.3",
    "vite": "^4.2.0",
    "vite-plugin-dts": "^2.1.0"
  }
}
