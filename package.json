{
  "name": "wavesurfer.js",
  "version": "7.0.0-alpha.18",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/wavesurfer.min.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/wavesurfer.min.js"
    }
  },
  "scripts": {
    "build:dev": "tsc -w",
    "build:umd": "webpack && webpack --config webpack.config.plugins.js",
    "build": "tsc && npm run build:umd",
    "prepublishOnly": "npm run build",
    "docs": "npx typedoc src/index.ts",
    "lint": "eslint --ext .ts src --fix",
    "prettier": "prettier -w '**/*.{js,ts,css}' --ignore-path .gitignore",
    "cypress": "cypress open",
    "test": "cypress run",
    "serve": "browser-sync start --server --port 9090 --startPath /tutorial --watch '*'",
    "start": "npm run build:dev & npm run serve"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "browser-sync": "^2.29.0",
    "cypress": "^12.9.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.7",
    "ts-loader": "^9.4.2",
    "typedoc": "^0.23.28",
    "typescript": "^5.0.3",
    "webpack": "^5.77.0",
    "webpack-cli": "^5.0.1"
  }
}
