{
  "name": "wavesurfer.js",
  "version": "7.0.0-alpha.18",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/wavesurfer.umd.cjs",
  "exports": {
    ".": {
      "import": "./dist/wavesurfer.js",
      "require": "./dist/wavesurfer.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && vite build --c vite.config.minimap.js && vite build --c vite.config.multitrack.js && vite build --c vite.config.regions.js && vite build --c vite.config.timeline.js",
    "preview": "vite preview",
    "docs": "npx typedoc src/index.ts",
    "lint": "eslint --ext .ts src --fix",
    "prettier": "prettier -w '**/*.{js,ts,css}' --ignore-path .gitignore",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:ci": "yarn test --ci --coverage --json --watchAll=false --testLocationInResults --outputFile=jest.results.json"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "canvas": "^2.11.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "prettier": "^2.8.7",
    "typedoc": "^0.23.28",
    "typescript": "^4.9.3",
    "vite": "^4.2.0",
    "vite-plugin-dts": "^2.1.0",
    "whatwg-fetch": "^3.6.2"
  }
}
